@using ThaiMovie.ViewModels;
@model NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(n => n.Customer.Name)
        @Html.TextBoxFor(n => n.Customer.Name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(n => n.Customer.Date)
        @Html.TextBoxFor(n => n.Customer.Date, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(n=>n.Customer.IsSubscribedToNewsletter) Subscribed To Newsletters
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(n=>n.Customer.MembershipTypeID)
        @Html.DropDownListFor(n=>n.Customer.MembershipTypeID,new SelectList(Model.MembershipTypes,"Id","Name"),"---Select Membership Type---",new {@class="form-control" }) 

    </div>
}